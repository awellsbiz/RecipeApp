<%- include('../partials/header.ejs') %>
<h1> Welcome to Your profile, <%= user.name %></h1>
<p>Enjoy using our app!</p>
<p>Here are your favorite recipes:</p>


<div class="row">
  <% user.recipes.forEach(recipe => { %>
  <div class="col-sm-6 col-md-4 col-lg-3">
    <div class="card mb-3">
      <div class="card-body">
        <h5 class="card-title"><%= recipe.label %></h5>
        <p class="card-text"><a href="<%= recipe.url %>">Click for Directions</a></p>
        <label for="comment">Comment:</label>
        <div class="mt-2">
          <form method="POST" action="/favorites/<%=recipe.id%>">
            <textarea name="comment" class="form-control" rows="5"></textarea>
            <button class="btn btn-primary btn-sm" id="submit-comment">Submit</button>
          </form>
          <button class="btn btn-secondary btn-sm" id="edit-comment">Edit</button>
          <br />
          <a href="/favorites/recipes/:recipeid" class="btn btn-primary">Remove</a>
        </div>
      </div>
    </div>
  </div>
  <% }) %>
</div>

 

<p>Click this link to add recipes to your profile!</p>
<a href="../recipes">Search</a>
<br />
<a href="./logout">Log Out</a>





