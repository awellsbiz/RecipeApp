<%- include('../partials/header.ejs') %>
<h1> Welcome to Your profile, <%= user.name %></h1>
<p>Enjoy using our app!</p>
<p>Here are your favorite recipes:</p>


<div class="card" style="width: 18rem;">
    <% userData.recipes.forEach(recipe => {%>
    <div class="card-body">
            <h5 class="card-title"><%= recipe.label %></h5>
            <%})%>
      <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
      <label for="comment">Comment:</label>
    <textarea class="form-control" id="comment" rows="5"></textarea>
    <div class="mt-2">
    <button class="btn btn-primary btn-sm" id="submit-comment">Submit</button>
    <button class="btn btn-secondary btn-sm" id="edit-comment">Edit</button>
    <br />
    <a href="/recipes/:recipeid" class="btn btn-primary">remove</a>
    </div>
  </div>
  </div>
 

<p>Click this link to add recipes to your profile!</p>
<a href="../recipes">Search</a>
